text-center()
    text-align center
    line-height @height
    vertical-align middle
    
pos-abs(t=0,l=0)
    position absolute
    top t
    left l
    

body
    font-size 16px
    font-family "Microsoft Yahei"

table
    margin 30px 20px
    th
        text-align left
        background black
        color white
    tr
        for i in 1 2 3
            &:nth-child({i})
                color red
        &:nth-child(2n)
            background #CACACA
        &:nth-child(2n+1)
            background white
            
form
    width 300px
    
    input[type="text"]
        display block
        margin 0 auto
        width 120px
        height 21px
        box-sizing border-box
        transition width .8s ease .1s
        &:focus
            width 200px
            border none
            box-shadow blue 0 0 6px
        
.banner
    margin 30px
    width 300px
    height 150px
    display flex
    align-items flex-end
    justify-content flex-end
    position relative
    overflow hidden
    
    dummy
        visibility hidden
    
    a
        display inline-block
        width 30px
        height @width
        color white
        text-decoration none
        margin 0 0 0 5px
        background rgba(255,255,255,.3)
        z-index 1
        text-center()
        
        &:hover
            background rgba(255,255,255,.5)
    
    .slider
        width @width*3
        height @height
        transition left 1s ease
        pos-abs()
        
    .slide
        width @width
        height @height
        float left
        color white
        font-size 40px
        text-center()
        
    .slide:nth-child(1)
        background red
        
    .slide:nth-child(2)
        background purple
        
    .slide:nth-child(3)
        background blue
        
    for i in 1 2 3
        #d{i}:target~.slider
            left - @width*(i - 1)
